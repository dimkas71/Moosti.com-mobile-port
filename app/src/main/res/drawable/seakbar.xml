<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/accent_material_light"
                android:endColor="@color/accent_material_light"
                android:angle="-90" />
            <size
                android:height="5dp"
                android:width="5dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/accent_material_light"
                    android:endColor="@color/accent_material_light"
                    android:angle="-90" />
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>
</layer-list>